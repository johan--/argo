<% resource.xpath('externalFile').each do |external_file| %>
  <li class="external-file">
    <span class="label">
      External File
    </span>
    <%= external_file['fileId'] -%>
    (from item '<%= link_to external_file['objectId'], solr_document_path(external_file['objectId']) if external_file['objectId'].present? -%>',
     resource '<%= external_file['resourceId'] -%>')
  </li>
<% end %>
